<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinBase.Views.PlantDetailsView">
    <ContentPage.Content>
        <Grid RowDefinitions="9*,1*">
            <ContentView Grid.Row="0" Content="{Binding CurrentContentView}"></ContentView>
            <Grid Grid.Row="1" ColumnDefinitions="*,*,*,*">
                <Button Grid.Column="0" Text="Plant Details" Command="{Binding PlantDetailsCmd}"></Button>
                <Button Grid.Column="1" Text="Datalogger Details" Command="{Binding DataloggerDetailsCmd}"></Button>
                <Button Grid.Column="2" Text="C"></Button>
                <Button Grid.Column="3" Text="D"></Button>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>